{
  "id": "isguvenligi",
  "realm": "isguvenligi",
  "displayName": "İş Güvenliği Realm",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": true,
  "registrationEmailAsUsername": true,
  "rememberMe": true,
  "verifyEmail": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 30,
  "defaultRoles": ["default-roles-isguvenligi"],
  "requiredCredentials": ["password"],
  "passwordPolicy": "length(8) and digits(2) and lowerCase(1) and upperCase(1) and specialChars(1) and notUsername",
  "otpPolicyType": "totp",
  "otpPolicyAlgorithm": "HmacSHA1",
  "otpPolicyInitialCounter": 0,
  "otpPolicyDigits": 6,
  "otpPolicyLookAheadWindow": 1,
  "otpPolicyPeriod": 30,
  "loginTheme": "isguvenligi",
  "accountTheme": "isguvenligi",
  "adminTheme": "keycloak",
  "emailTheme": "keycloak",
  "browserSecurityHeaders": {
    "contentSecurityPolicyReportOnly": "",
    "xContentTypeOptions": "nosniff",
    "xRobotsTag": "none",
    "xFrameOptions": "SAMEORIGIN",
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self'; object-src 'none';",
    "xXSSProtection": "1; mode=block",
    "strictTransportSecurity": "max-age=31536000; includeSubDomains"
  },
  "clients": [
    {
      "id": "frontend-client",
      "clientId": "frontend-client",
      "name": "İş Güvenliği Frontend",
      "description": "Next.js frontend uygulaması",
      "enabled": true,
      "publicClient": true,
      "redirectUris": ["http://localhost:3000/*"],
      "webOrigins": ["http://localhost:3000"],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "frontchannelLogout": true,
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "fullScopeAllowed": true,
      "nodeReRegistrationTimeout": -1,
      "defaultClientScopes": ["web-origins", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "microprofile-jwt"]
    },
    {
      "id": "backend-client",
      "clientId": "backend-client",
      "name": "İş Güvenliği Backend",
      "description": "NestJS backend API",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "backend-secret-2024",
      "redirectUris": ["http://localhost:3001/*"],
      "webOrigins": ["http://localhost:3001"],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "nodeReRegistrationTimeout": -1,
      "defaultClientScopes": ["web-origins", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "microprofile-jwt"]
    }
  ],
  "identityProviders": [
    {
      "alias": "google",
      "displayName": "Google",
      "providerId": "google",
      "enabled": false,
      "updateProfileFirstLoginMode": "on",
      "trustEmail": true,
      "storeToken": false,
      "addReadTokenRoleOnCreate": false,
      "authenticateByDefault": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "first broker login",
      "config": {
        "syncMode": "IMPORT",
        "clientId": "##GOOGLE_CLIENT_ID##",
        "clientSecret": "##GOOGLE_CLIENT_SECRET##",
        "acceptsPromptNoneForwardFromClient": "false"
      }
    },
    {
      "alias": "microsoft",
      "displayName": "Microsoft",
      "providerId": "microsoft",
      "enabled": false,
      "updateProfileFirstLoginMode": "on",
      "trustEmail": true,
      "storeToken": false,
      "addReadTokenRoleOnCreate": false,
      "authenticateByDefault": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "first broker login",
      "config": {
        "syncMode": "IMPORT",
        "clientId": "##MICROSOFT_CLIENT_ID##",
        "clientSecret": "##MICROSOFT_CLIENT_SECRET##"
      }
    }
  ],
  "roles": {
    "realm": [
      {
        "id": "admin-role",
        "name": "admin",
        "description": "Sistem yöneticisi rolü - Tam erişim",
        "composite": false,
        "clientRole": false,
        "containerId": "isguvenligi"
      },
      {
        "id": "manager-role",
        "name": "manager",
        "description": "İş güvenliği uzmanı/yöneticisi rolü",
        "composite": false,
        "clientRole": false,
        "containerId": "isguvenligi"
      },
      {
        "id": "employee-role",
        "name": "employee",
        "description": "Çalışan rolü",
        "composite": false,
        "clientRole": false,
        "containerId": "isguvenligi"
      },
      {
        "id": "safety-officer-role",
        "name": "safety-officer",
        "description": "İş güvenliği uzmanı rolü",
        "composite": false,
        "clientRole": false,
        "containerId": "isguvenligi"
      }
    ]
  },
  "users": [
    {
      "id": "admin-user",
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "System",
      "lastName": "Administrator",
      "email": "admin@isguvenligi.com",
      "credentials": [
        {
          "id": "admin-password",
          "type": "password",
          "value": "Admin123!",
          "temporary": false
        }
      ],
      "realmRoles": ["admin", "default-roles-isguvenligi"],
      "clientRoles": {},
      "groups": []
    }
  ],
  "groups": [
    {
      "id": "yoneticiler",
      "name": "Yöneticiler",
      "path": "/Yöneticiler",
      "realmRoles": ["manager"]
    },
    {
      "id": "is-guvenligi-uzmanlari",
      "name": "İş Güvenliği Uzmanları",
      "path": "/İş Güvenliği Uzmanları",
      "realmRoles": ["safety-officer"]
    },
    {
      "id": "calisanlar",
      "name": "Çalışanlar",
      "path": "/Çalışanlar",
      "realmRoles": ["employee"]
    }
  ],
  "attributes": {
    "frontendUrl": "http://localhost:8080",
    "adminUrl": "http://localhost:8080",
    "displayName": "İş Güvenliği Sistemi"
  }
}