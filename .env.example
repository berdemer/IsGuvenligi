# Keycloak Configuration Example
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your-secure-admin-password

# Database Configuration
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Keycloak Database Configuration
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=your-secure-db-password

# Keycloak Server Configuration
KC_HOSTNAME=localhost
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false
KC_HTTP_ENABLED=true
KC_HTTP_PORT=8080
KC_HTTPS_PORT=8443

# Keycloak Features
KC_FEATURES=token-exchange,admin-fine-grained-authz
KC_METRICS_ENABLED=true
KC_HEALTH_ENABLED=true
KC_LOG_LEVEL=info

# Client Secrets (Change these in production!)
WEB_CLIENT_SECRET=your-web-client-secret
API_CLIENT_SECRET=your-api-client-secret

# Realm Configuration
REALM_NAME=isguvenligi
REALM_DISPLAY_NAME="İş Güvenliği Realm"